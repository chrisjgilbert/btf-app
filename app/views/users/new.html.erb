<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1 class="text-center">Sign up</h1>
      <%= bootstrap_form_for(@user, url: signup_path, inline_errors: false) do |f| %>
        <%= render 'shared/user_error_messages' %>
        <%= f.text_field :first_name, :label => 'First name (required)', :required => true %>
        <%= f.text_field :last_name, :label => 'Last name (required)', :required => true %>
        <%= f.text_field :email, :label => 'Email (required)', :required => true %>
        <%= f.password_field :password, label: "Password (required, minimum of 6 characters)", :required => true %>
        <%= f.password_field :password_confirmation, :label => 'Password confirmation (required)', :required => true %>
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      <% end %>
      <p>Already a member? <%= link_to "Login", login_path %> instead</p>
    </div>
  </div>
</div>