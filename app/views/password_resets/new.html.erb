<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Reset password</h1>
      <h4 class="text-center">We will send you link to reset your password</h4>
      <%= bootstrap_form_for(:password_reset, url: password_resets_path) do |f| %>
        <%= f.email_field :email %>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
