<div class="container">
  <div class="row">
    <div class="col-md-12 stats">
      <div class="card with-padding">
        <h1 class="text-center">Total picks</h1>
        <h4>Scroll ðŸ‘‰ to view more</h4>
        <ul class="competitions-container">
        <% @competitions.each do |competition| %>
        <% next unless competition.active? %>
          <ul class="competition">
          <li class="competitions-name"><%= competition.name %></li>
          <% competition.competitors_sorted_by_pick_count.each do |competitor| %>
            <li class="competitors-name"><%= competitor.name %> <span class="picks">(<%= competitor.picks.count %>)</span></li>
          <% end %>
          </ul>
        <% end %>
        </ul>

      </div>
    </div>
  </div>
</div>
