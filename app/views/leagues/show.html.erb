<h1><%= @league.name %></h1>
<ul>
  <% @league.league_memberships.each do |league_membership| %>
    <li><%= link_to league_membership.team.name, league_membership.team %></li>
  <% end %>
</ul>
<p><%= link_to 'View all leagues', leagues_path %></p>

<% if @league.user == current_user %>
  <a href="whatsapp://send?text=<%= request.original_url %>">Invite friends to join <%= @league.name %> by sharing on WhatsApp!</a>
<% end %>