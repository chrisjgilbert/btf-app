<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
    <h1>Create your own mini league</h1>
    <p>Your team will automatically be a member of a league you create.</p>
      <%= bootstrap_form_for @league do |f| %>
        <%= render 'shared/league_error_messages' %>
        <%= f.text_field :name, label: "Name (required)", :required => true %>
        <%= f.submit "Create league", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
