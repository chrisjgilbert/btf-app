<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <ul class="list-group"">
        <% @competitions.each do |competition| %>
          <li class="list-group-item ">
            <h3 class="text-muted">Event Name</h3>
            <h4><%= link_to competition.name, competition %></h4>
            <h3 class="text-muted">Favourite</h3>
            <% unless competition.favourite_id == nil %>
              <h4><%= competition.favourite.name %></h4>
            <% else %>
              <h4>No favourite></h4>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

     
