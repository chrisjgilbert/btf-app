<% fav_color_class = @favourite_count > TeamValidator::FAVOURITE_LIMIT ? 'over-fav-limit' : 'under-fav-limit' %>
<% fav_count = @favourite_count %>
<% if @favourite_count < TeamValidator::FAVOURITE_LIMIT  %>
    <% available_count = TeamValidator::FAVOURITE_LIMIT - fav_count %>
    <p id="favourite_count" class="<%= fav_color_class %>"><%= pluralize(available_count, 'favourite') %> available</p>
  <% else %>
    <p id="favourite_count" class="<%= fav_color_class %>"><%= pluralize(fav_count, 'favourite') %> picked</p>
<% end %>