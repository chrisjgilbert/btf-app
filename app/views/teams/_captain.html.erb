<div class="form-group">
  <label for="team_captain_id">Captain</label>
  <select class="form-control" name="team[captain_id]" id="team_captain_id">
    <% if @captain_options.present? %>
      <% @captain_options.each do |option| %>
        <option value="<%= option.id %>" <%= @current_captain == option ? 'selected' : '' %>><%= option.name %> for <%= option.competition.name %></option>
      <% end %>
    <% else %>
        <option disabled selected value> -- captain options will appear here -- </option>
    <% end %>
  </select>
</div>
