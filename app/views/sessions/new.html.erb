<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
      <h1 class="text-center">Login</h1>
      <%= bootstrap_form_for(:session, url: login_path, inline_errors: false) do |f| %>
      <%= f.email_field :email, label: "Email (required)", :required => true %>
      <%= f.password_field :password, label: "Password (required)", :required => true %>
      <%= f.submit "Log in", class: 'btn btn-primary' %>
      <% end %>
      <p>Not a member? <%= link_to "Signup", signup_path %> instead</p>
      <p><%= link_to "Forgot password?", new_password_reset_path %></p>
    </div>
  </div>
</div>



